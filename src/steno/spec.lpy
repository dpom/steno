(ns steno.spec
  "Defines the entities of this application (documentation only)")

(def LOOP 0)
(def LINE 1)

(def LTYPE [:enum LOOP LINE])

(def X nat-int?)
(def Y nat-int?)

(def CNUM [:and int? #(< % 127)  #(> % -128)])

(def CNUMSEQ [:sequential CNUM])

(def CELL [:tuple X Y CNUM])

(def LSEQ [:sequential CELL])

(def MATCH [:and float? #(< 0 %) #(> 1 %)])

(def LETTER
  [:touple
   [:string {:min 1 :max 1}]
   MATCH])

(def LETTERS [:sequential LETTER])

(def WORD [:sequential LETTERS])

(def TEXT
  [:or LETTER LETTERS WORD])

(def LSIGN
  [:map
   [:ltype LTYPE]
   [:lineseq LSEQ]
   [:text TEXT]])

(def WSIGN [:sequential LSIGN])

(def FREQ [:map-of :int :int])

(def FREQ-REFERENCE
  [:map
   [:letter string?]
   [:min-len nat-int?]
   [:max-len nat-int?]
   [:freq FREQ]
   [:min-match MATCH]])

(def DIFF-REFERENCE
  [:map
   [:letter string?]
   [:min-len nat-int?]
   [:max-len nat-int?]
   [:reference CNUMSEQ]
   [:max-bits nat-int?]
   [:min-match MATCH]])
